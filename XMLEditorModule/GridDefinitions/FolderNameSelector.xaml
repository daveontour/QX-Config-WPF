<UserControl x:Class="QXEditorModule.GridDefinitions.FolderNameSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QXEditorModule.GridDefinitions"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <DockPanel>
        <Button DockPanel.Dock="Right" Width="50" Click="Button_Click">Select..</Button>
        <TextBox Text="{Binding Path=Value}"  />
    </DockPanel>
</UserControl>
